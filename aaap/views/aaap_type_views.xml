<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View voor Aap Types -->
    <record id="view_aaap_type_tree" model="ir.ui.view">
        <field name="name">aaap.type.tree</field>
        <field name="model">aaap.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View voor Aap Types -->
    <record id="view_aaap_type_form" model="ir.ui.view">
        <field name="name">aaap.type.form</field>
        <field name="model">aaap.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
</odoo>