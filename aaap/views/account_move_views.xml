<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_aaap" model="ir.ui.view">
        <field name="name">account.move.form.inherit.aaap</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="is_aaap_invoice" invisible="1"/>
                <field name="aap_plaats_id" 
                       groups="base.group_user"
                       optional="show"/>
            </xpath>
            
            <xpath expr="//field[@name='aap_plaats_id']" position="attributes">
                <attribute name="visibility">{'move_type': ('out_invoice', 'out_refund')}</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>