<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="aaap_clicker_template">
        <t t-call="web.layout">
            <t t-set="title">Aap Bananen Clicker</t>
            <t t-set="head">
                <t t-call-assets="web.assets_common" t-js="false"/>
                <t t-call-assets="web.assets_common" t-css="true"/>
                <t t-call-assets="web.assets_backend" t-js="false"/>
                <t t-call-assets="web.assets_backend" t-css="true"/>
            </t>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h2>🐒 Bananen Clicker Game 🍌</h2>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="aap_selectie">Kies een aap:</label>
                                    <select id="aap_selectie" class="form-control">
                                        <option value="">-- Selecteer een aap --</option>
                                        <t t-foreach="apen" t-as="aap">
                                            <option t-att-value="aap['id']" t-att-data-bananen="aap['aantal_reeds_gegeten_bananen']">
                                                <t t-esc="aap['name']"/> (<t t-esc="aap['aantal_reeds_gegeten_bananen']"/> bananen)
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                
                                <div id="clicker_game" class="text-center mt-4 position-relative" style="display: none;">
                                    <div class="mb-4">
                                        <h3>Bananen: <span id="bananen_aantal" class="text-warning">0</span></h3>
                                    </div>
                                    
                                    <div class="clicker-area mb-4">
                                        <img id="banaan_img" src="/aaap/static/img/banana.jpeg" 
                                             width="200" height="200" style="cursor: pointer;" 
                                             alt="Klik op de banaan!"/>
                                    </div>
                                    
                                    <div id="messages" class="alert mt-3" style="display: none;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript" src="/aaap/static/src/js/clicker_game.js"></script>
        </t>
    </template>
</odoo>