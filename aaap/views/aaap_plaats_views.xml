<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_aaap_plaats_tree" model="ir.ui.view">
        <field name="name">aaap.plaats.tree</field>
        <field name="model">aaap.plaats</field>
        <field name="arch" type="xml">
            <list decoration-success="not dood" decoration-danger="dood">
                <field name="name" />
                <field name="location" />
                <field name="aantal_dagelijkse_bananen" />
                <field name="geslacht" />
                <field name="kleur" widget="color" />
                <field name="type_id" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_aaap_plaats_form" model="ir.ui.view">
        <field name="name">aaap.plaats.form</field>
        <field name="model">aaap.plaats</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_dood_aap" type="object" string="Dode aap" />
                    <button name="action_levende_aap" type="object" string="Levende aap" />
                    <field name="status" widget="statusbar"
                        statusbar_visible="pasgeboren,jong,volwassen,senior,bejaard,overleden" />
                    <button name="action_view_invoices" type="object"
                        class="oe_stat_button" icon="fa-money"
                        visibility="{'invoice_count': [('>', 0)]}">
                        <field name="invoice_count" widget="statinfo" string="Facturen" />
                    </button>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="location" />
                        <field name="aantal_dagelijkse_bananen" invisible="dood" />
                        <field name="geboorte_datum" />
                        <field name="geslacht" />
                        <field name="kleur" widget="color" />
                        <field name="dood" />
                        <field name="aantal_poten" />
                        <field name="aantal_oren" />
                        <field name="type_id" />
                        <field name="tag_ids" widget="many2many_tags"
                            options="{'color_field': 'color'}" />
                        <field name="image_1920" widget="image" class="oe_avatar"
                            options="{'preview_image': 'image_128'}" />
                        <field name="waardeprijs" />
                    </group>
                    <notebook>
                        <page string="Facturen" name="invoices">
                            <field name="factuur_ids" readonly="1">
                                <list>
                                    <field name="name" />
                                    <field name="partner_id" />
                                    <field name="date" />
                                    <field name="amount_total" />
                                    <field name="state" />
                                    <field name="payment_state" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action - Aangepast zonder gallery view type -->
    <record id="action_aaap_model" model="ir.actions.act_window">
        <field name="name">Aap Plaatsen</field>
        <field name="res_model">aaap.plaats</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak uw eerste aap plaats aan!
            </p>
        </field>
    </record>

    <!-- search view -->
    <record id="view_aaap_plaats_search" model="ir.ui.view">
        <field name="name">aaap.plaats.search</field>
        <field name="model">aaap.plaats</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="location" />
                <field name="geslacht" />
                <field name="kleur" widget="color" />
                <filter name="dood_filter" string="Dood" domain="[('dood', '=', True)]" />
                <filter name="levend_filter" string="Levend" domain="[('dood', '=', False)]" />
                <group expand="0" string="Groeperen Op">
                    <filter name="group_by_geslacht" string="Geslacht"
                        context="{'group_by': 'geslacht'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View - met extra knop voor fotogalerij -->
    <record id="view_aaap_plaats_kanban" model="ir.ui.view">
        <field name="name">aaap.plaats.kanban</field>
        <field name="model">aaap.plaats</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type_id" class="o_kanban_small_column" records_draggable="1">
                <field name="name" />
                <field name="location" />
                <field name="geslacht" />
                <field name="dood" />
                <field name="type_id" />
                <field name="tag_ids" />
                <field name="waardeprijs" />
                <field name="image_128" />

                <!-- Control panel met fotogalerij knop -->
                <control>
                    <button name="%(action_aaap_gallery_window)d" type="action"
                        string="Fotogalerij" class="btn btn-secondary" />
                </control>

                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="oe_kanban_card oe_kanban_global_click 
                                           #{record.dood.raw_value ? 'bg-danger' : ''}">
                            <div class="o_kanban_image">
                                <img
                                    t-att-src="kanban_image('aaap.plaats', 'image_128', record.id.raw_value)"
                                    t-att-alt="record.name.value" class="o_image_64_contain" />
                            </div>
                            <div class="o_kanban_details">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                </div>
                                <div class="text-muted">
                                    <field name="location" />
                                </div>
                                <div>
                                    <span class="badge badge-pill">
                                        <field name="geslacht" />
                                    </span>
                                    <span class="float-right">
                                        <field name="waardeprijs" widget="monetary" />
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="tag_ids" widget="many2many_tags"
                                            options="{'color_field': 'color'}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Fotogalerij Action Window -->
    <record id="action_aaap_gallery_window" model="ir.actions.act_window">
        <field name="name">Apen Fotogalerij</field>
        <field name="res_model">aaap.plaats</field>
        <field name="view_mode">kanban</field>
        <field name="domain">[('dood', '=', False)]</field>
        <field name="view_id" ref="view_aaap_gallery_kanban" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Voeg foto's toe aan apen om ze in de galerij te zien!
            </p>
        </field>
    </record>

    <!-- Fotogalerij View -->
    <record id="view_aaap_gallery_kanban" model="ir.ui.view">
        <field name="name">aaap.plaats.gallery.kanban</field>
        <field name="model">aaap.plaats</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <kanban class="o_aaap_gallery_kanban" default_order="name">
                <field name="id" />
                <field name="name" />
                <field name="location" />
                <field name="geslacht" />
                <field name="description" />
                <field name="tag_ids" />
                <field name="image_1920" />
                <field name="status" />

                <!-- Control panel om terug te gaan naar normale views -->
                <control>
                    <button name="%(action_aaap_model)d" type="action"
                        string="Terug naar standaard weergave" class="btn btn-secondary" />
                </control>

                <templates>
                    <t t-name="kanban-box">
                        <div class="o_aaap_gallery_item">
                            <div class="card h-100 shadow-sm">
                                <div
                                    class="card-img-top d-flex align-items-center justify-content-center"
                                    style="height: 200px; overflow: hidden; background-color: #f8f9fa;">
                                    <img t-if="record.image_1920.raw_value"
                                        t-att-src="kanban_image('aaap.plaats', 'image_1920', record.id.raw_value)"
                                        class="img-fluid"
                                        style="max-height: 200px; object-fit: cover;"
                                        t-att-alt="record.name.value" />
                                    <div t-else="" class="text-center text-muted">
                                        <i class="fa fa-camera fa-3x"></i>
                                        <p>Geen afbeelding</p>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-center">
                                        <field name="name" />
                                    </h5>
                                    <p class="card-text">
                                        <i class="fa fa-map-marker" title="Locatie"></i>
                                        <field name="location" />
                                    </p>
                                    <p class="card-text">
                                        <i class="fa fa-info-circle" title="Status"></i>
                                        <field name="status" />
                                    </p>
                                    <p t-if="record.description.raw_value"
                                        class="card-text text-muted">
                                        <field name="description" />
                                    </p>
                                </div>
                                <div class="card-footer bg-white">
                                    <span class="badge badge-pill badge-primary">
                                        <field name="geslacht" />
                                    </span>
                                    <div class="mt-2">
                                        <field name="tag_ids" widget="many2many_tags"
                                            options="{'color_field': 'color'}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>