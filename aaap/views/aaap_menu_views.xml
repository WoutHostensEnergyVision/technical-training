<odoo>
    <menuitem id="menu_aaap_root" name="AAAP" sequence="10" />

    <record id="action_aaap_type" model="ir.actions.act_window">
        <field name="name">Aap Types</field>
        <field name="res_model">aaap.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuw aap type aan!
            </p>
        </field>
    </record>
    <menuitem id="menu_aaap_type" name="Aap Types" parent="menu_aaap_root" sequence="40"
        action="action_aaap_type" />


    <menuitem id="menu_aaap_tag" name="Aap Tags" parent="menu_aaap_root" sequence="50"
        action="action_aaap_tag" />

    <record id="action_aaap_plaats" model="ir.actions.act_window">
        <field name="name">Apen</field>
        <field name="res_model">aaap.plaats</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuwe aap aan!
            </p>
        </field>
    </record>

    <menuitem id="menu_aaap_plaats"
        name="Apen"
        parent="menu_aaap_root"
        action="action_aaap_model"
        sequence="20" />

    <record id="action_aaap_tag" model="ir.actions.act_window">
        <field name="name">Aap Tags</field>
        <field name="res_model">aaap.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuw aap tag aan!
            </p>
        </field>
    </record>

    <record id="action_aaap_facturen" model="ir.actions.act_window">
        <field name="name">Aap Facturen</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_aaap_invoice', '=', True)]</field>
        <field name="context">{'default_move_type': 'out_invoice', 'default_is_aaap_invoice': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuwe aap factuur aan!
            </p>
        </field>
    </record>

    <menuitem id="menu_aaap_facturen"
        name="Aap Facturen"
        parent="menu_aaap_root"
        action="action_aaap_facturen"
        sequence="60" />

    <record id="action_aaap_clicker" model="ir.actions.act_url">
        <field name="name">Bananen Clicker</field>
        <field name="url">/aaap/clicker</field>
        <field name="target">self</field>
    </record>

    <menuitem id="menu_aaap_clicker"
        name="Bananen Clicker"
        parent="menu_aaap_root"
        action="action_aaap_clicker"
        sequence="55" />


    <menuitem id="menu_aaap_gallery"
        name="Apen Fotogalerij"
        parent="menu_aaap_root"
        action="action_aaap_gallery_window"
        sequence="25" />

</odoo>