<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View voor Aap Tags -->
    <record id="view_aaap_tag_tree" model="ir.ui.view">
        <field name="name">aaap.tag.tree</field>
        <field name="model">aaap.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- Form View voor Aap Tags -->
    <record id="view_aaap_tag_form" model="ir.ui.view">
        <field name="name">aaap.tag.form</field>
        <field name="model">aaap.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_apen" type="object"
                                class="oe_stat_button" icon="fa-paw">
                            <field name="aantal_apen" widget="statinfo" string="Apen"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="color" widget="color_picker"/>
                    </group>

                    <notebook>
                        <page string="Gekoppelde Apen" name="gekoppelde_apen">
                            <field name="aap_plaats_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="location"/>
                                    <field name="aantal_dagelijkse_bananen"/>
                                    <field name="geslacht"/>
                                    <field name="kleur"/>
                                    <field name="type_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View voor Aap Tags -->
    <record id="view_aaap_tag_search" model="ir.ui.view">
        <field name="name">aaap.tag.search</field>
        <field name="model">aaap.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category"/>
                <group expand="0" string="Groeperen Op">
                    <filter name="group_by_category" string="Categorie" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action voor Aap Tags -->
    <record id="action_aaap_tag" model="ir.actions.act_window">
        <field name="name">Aap Tags</field>
        <field name="res_model">aaap.tag</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_aaap_tag_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maak een nieuwe aap tag aan!
            </p>
        </field>
    </record>
</odoo>